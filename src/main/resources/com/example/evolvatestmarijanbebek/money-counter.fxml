<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.evolvatestmarijanbebek.controllers.SantaTripsController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Top Section -->
    <VBox alignment="CENTER" spacing="10.0">
        <Button text="Check for New Trips" onAction="#onHelloButtonClick"/>
        <Label text="Status:" style="-fx-font-weight: bold;"/>
        <Label fx:id="statusText" wrapText="true"/>
    </VBox>

    <!-- Middle Section -->
    <HBox spacing="20.0">
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Recent Trip Data" style="-fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true">
                <TextArea fx:id="recentTripsArea" editable="false" wrapText="true"/>
            </ScrollPane>
        </VBox>

        <!-- Right Section -->
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Total Trip Data" style="-fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true">
                <TextArea fx:id="totalTripsArea" editable="false" wrapText="true"/>
            </ScrollPane>
        </VBox>
    </HBox>

</VBox>
